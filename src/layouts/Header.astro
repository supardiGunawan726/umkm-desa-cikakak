<header class="border-b border-b-gray-100 bg-white">
  <div class="flex justify-between items-center container mx-auto min-h-[60px] px-4">
    <p class="font-bold">
      <a href="/">UMKM DESA CIKAKAK</a>
    </p>
    <button id="menu-btn" data-state="close" class="group peer md:hidden">
      <svg class="hidden group-data-[state=close]:block" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
      <svg class="hidden group-data-[state=open]:block" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
    </button>
    <nav 
      id="menu-content" 
      class:list={[
        "fixed left-0 right-0 top-0 bottom-0 flex flex-col items-center justify-center gap-4 transition-all ease-in-out duration-200",
        "opacity-0 invisible peer-data-[state=open]:opacity-100 peer-data-[state=open]:visible",
        "md:opacity-100 md:visible md:static md:flex-row md:gap-8 md:text-sm"
      ]}>
      <button id="menu-close" class="md:hidden">
        <svg class="absolute right-4 top-[18px]" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
      </button>
      <a href="/" class="hover:opacity-60">Beranda</a>
      <a href="/tentang" class="hover:opacity-60">Tentang</a>
      <a href="/kontak" class="hover:opacity-60">Kontak</a>
    </nav>
  </div>
</header>

<script>
  const menuBtn = document.getElementById("menu-btn");
  const menuClose = document.getElementById("menu-close");

  if (menuBtn) {
    menuBtn.addEventListener("click", function(){
      const currentState = menuBtn.dataset.state;
      const nextState = currentState === "open" ? "close" : "open";
      menuBtn.dataset.state = nextState;
    })
  }

  if (menuClose && menuBtn) {
    menuClose.addEventListener("click", () => {
      menuBtn.dataset.state = "close";
    })
  }

  
</script>